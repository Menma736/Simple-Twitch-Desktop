{
    "name": "simple-twitch-desktop",
    "description": "A lightweight alternative to the official twitch desktop app.",
    "version": "0.4.0",
    "main": "src/main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder",
		    "build:win": "electron-builder --win",
		    "build:mac": "electron-builder --mac",
		    "build:linux": "electron-builder --linux"
    },
    "author": "TeraNovaLP",
    "license": "Apache-2.0",
    "dependencies": {
        "electron-devtools-installer": "^3.1.1"
    },
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1"
    },
	"build": {
    "appId": "Twitch-Desktop",
    "productName": "Twitch Desktop",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "src/assets/icons/app-icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.games"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "src/assets/icons/",
      "category": "Internet"
    }
  }
}
