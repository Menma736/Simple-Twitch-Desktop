{
    "name": "simple-twitch-desktop",
    "description": "A lightweight alternative to the official twitch desktop app.",
    "version": "0.4.0",
    "main": "src/main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/TeraNovaLP/Simple-Twitch-Desktop"
    },
    "author": "TeraNovaLP",
    "license": "Apache-2.0",
    "dependencies": {
        "electron-devtools-installer": "^3.1.1"
    },
    "devDependencies": {
        "electron": "^9.1.0",
        "electron-builder": "^22.7.0"
    },
	  "build": {
    "appId": "Twitch-Desktop",
    "productName": "Twitch Desktop",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "src/assets/icons/app-icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.games"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "src/assets/icons/",
      "category": "Internet"
    }
  }
}
